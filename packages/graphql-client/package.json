{
  "name": "@pixelrpg/graphql-client",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "scripts": {
    "build": "yarn run typegen",
    "typegen": "yarn run typegen:graphql",
    "typegen:graphql": "graphql-codegen --config codegen.yml",
    "clear": "rm -rf dist",
    "watch": "yarn run build && tsc --watch",
    "test": "yarn run test:node && yarn run test:deno",
    "test:node": "ts-node ./test/node.ts",
    "test:deno": "deno run --importmap=imports.json --allow-read --allow-net test/deno.ts"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/typescript": "^2.4.1",
    "@graphql-codegen/typescript-operations": "2.2.1",
    "@tsconfig/node14": "^1.0.1",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "graphql": "^16.1.0",
    "prettier": "2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@graphql-codegen/typescript-graphql-request": "^4.3.2",
    "graphql-request": "^3.7.0",
    "graphql-tag": "^2.12.6"
  }
}
